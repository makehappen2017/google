{
  "name": "google-gmail",
  "displayName": "Google Gmail",
  "description": "Send, read, and manage Gmail emails with comprehensive features",
  "icon": "ðŸ“§",
  "category": "productivity",
  "subcategory": "email",
  "serverType": "stdio",
  "command": "node",
  "args": ["gmail/index.js"],
  "workingDirectory": "./packaged-apps/google",
  "env": {
    "NODE_ENV": "production"
  },
  "authType": "oauth",
  "oauth_config": {
    "provider": "google",
    "authorization_url": "https://accounts.google.com/o/oauth2/v2/auth",
    "token_url": "https://oauth2.googleapis.com/token",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.labels",
      "https://www.googleapis.com/auth/gmail.settings.basic",
      "https://www.googleapis.com/auth/gmail.settings.sharing"
    ],
    "response_type": "code",
    "access_type": "offline",
    "prompt": "consent"
  },
  "parameters": [
    {
      "name": "oauth_token",
      "type": "oauth",
      "label": "Google Gmail Access",
      "required": true,
      "oauth_config": {
        "auth_url": "https://accounts.google.com/o/oauth2/v2/auth",
        "token_url": "https://oauth2.googleapis.com/token",
        "client_id": "${GOOGLE_CLIENT_ID}",
        "client_secret": "${GOOGLE_CLIENT_SECRET}",
        "redirect_uri": "https://app.serenitiesai.com/api/oauth/native/callback",
        "scopes": [
          "https://www.googleapis.com/auth/gmail.send",
          "https://www.googleapis.com/auth/gmail.readonly",
          "https://www.googleapis.com/auth/gmail.modify",
          "https://www.googleapis.com/auth/gmail.labels",
          "https://www.googleapis.com/auth/gmail.settings.basic",
          "https://www.googleapis.com/auth/gmail.settings.sharing"
        ],
        "additional_params": {
          "access_type": "offline",
          "prompt": "consent"
        }
      }
    },
    {
      "name": "access_token",
      "type": "hidden",
      "label": "Access Token",
      "env_mapping": "access_token"
    },
    {
      "name": "refresh_token",
      "type": "hidden",
      "label": "Refresh Token",
      "env_mapping": "refresh_token"
    }
  ],
  "requiredPermissions": [
    "gmail.send",
    "gmail.readonly",
    "gmail.modify",
    "gmail.labels",
    "gmail.settings"
  ],
  "tags": [
    "email",
    "gmail",
    "messaging",
    "communication",
    "productivity",
    "google",
    "oauth"
  ],
  "version": "1.0.0",
  "author": "Mevio AI",
  "repository": "internal",
  "documentation": "./README.md"
}