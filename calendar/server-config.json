{
  "name": "google-calendar",
  "displayName": "Google Calendar",
  "description": "Manage Google Calendar events, check availability, and schedule meetings",
  "icon": "ðŸ“…",
  "category": "productivity",
  "subcategory": "calendar",
  "serverType": "stdio",
  "command": "node",
  "args": ["calendar/index.js"],
  "workingDirectory": "./packaged-apps/google",
  "env": {
    "NODE_ENV": "production"
  },
  "authType": "oauth",
  "oauth_config": {
    "provider": "google",
    "authorization_url": "https://accounts.google.com/o/oauth2/v2/auth",
    "token_url": "https://oauth2.googleapis.com/token",
    "scopes": [
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/calendar.readonly"
    ],
    "response_type": "code",
    "access_type": "offline",
    "prompt": "consent"
  },
  "parameters": [
    {
      "name": "oauth_token",
      "type": "oauth",
      "label": "Google Calendar Access",
      "required": true,
      "oauth_config": {
        "auth_url": "https://accounts.google.com/o/oauth2/v2/auth",
        "token_url": "https://oauth2.googleapis.com/token",
        "client_id": "${GOOGLE_CLIENT_ID}",
        "client_secret": "${GOOGLE_CLIENT_SECRET}",
        "redirect_uri": "https://app.serenitiesai.com/api/oauth/native/callback",
        "scopes": [
          "https://www.googleapis.com/auth/calendar",
          "https://www.googleapis.com/auth/calendar.events",
          "https://www.googleapis.com/auth/calendar.readonly"
        ],
        "additional_params": {
          "access_type": "offline",
          "prompt": "consent"
        }
      }
    },
    {
      "name": "access_token",
      "type": "hidden",
      "label": "Access Token",
      "env_mapping": "access_token"
    },
    {
      "name": "refresh_token",
      "type": "hidden",
      "label": "Refresh Token",
      "env_mapping": "refresh_token"
    }
  ],
  "capabilities": {
    "tools": [
      "calendar_list_events",
      "calendar_get_event",
      "calendar_create_event",
      "calendar_update_event",
      "calendar_delete_event",
      "calendar_list_calendars",
      "calendar_get_calendar",
      "calendar_quick_add",
      "calendar_get_free_busy"
    ]
  },
  "requiredPermissions": [
    "calendar.read",
    "calendar.write",
    "calendar.events"
  ],
  "tags": [
    "calendar",
    "scheduling",
    "events",
    "meetings",
    "productivity",
    "google",
    "oauth"
  ],
  "version": "1.0.0",
  "author": "Mevio AI",
  "repository": "internal",
  "documentation": "./README.md"
}